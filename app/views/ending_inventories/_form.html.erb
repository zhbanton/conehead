<h3><%= @day.date.to_formatted_s(:long_ordinal) %></h3>
<%= form_for [@day, @ending_inventory] do |f| %>
  <div class="form-group">
    <%= f.label :employee, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :employee %>
    </div>
  </div>
  <div class="ending-inventory-recipes-label"><strong>Flavors</strong></div>
  <fieldset id="ending-inventory-entries">
    <div class="sub-form-headers"><span class="ending-inventory-quantity-label">qty.</span><span class="ending-inventory-item-label">name</span></div>
    <ul>
      <%= f.fields_for :entries do |entry| %>
        <%= render 'entry_fields', f: entry %>
      <% end %>
    </ul>
    <%= link_to_add_association 'add flavor', f, :entries, 'data-association-insertion-node' => "#entries ul", 'data-association-insertion-method' => "append" %>
  </fieldset>
  <%= f.hidden_field :inventory_date, value: @day.date %>
  <div class="form-submit">
    <%= f.submit %>
  </div>
<% end %>
