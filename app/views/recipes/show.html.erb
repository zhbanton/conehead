<h1><%= @recipe.name %></h1>
<ul>
  <li>
    <table>
      <tbody>
        <% @recipe.recipe_entries.each do |entry| %>
          <tr>
            <td><%= entry.quantity %></td>
            <td><%= entry.ingredient.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </li>
  <li>makes <%= @recipe.yield %> grams of finished product</li>
  <li><%= @recipe.note %></li>
</ul>
<%= link_to 'back', recipes_path %>
<%= link_to 'edit', edit_recipe_path(@recipe) %>
